/* packageA/pages/collectData/index.wxss */
.collect-box{
  width: 100%;
  height: 100vh;
  background: #F6F6F6;
  overflow: hidden;
}
.top{
  position: relative;
  width: 100%;
height: 448rpx;
background: linear-gradient(159deg, rgba(255, 103, 21, 0.40) 3.34%, rgba(244, 246, 247, 0.00) 63.32%);
}
.t-bg{
  position: absolute;
  right: 0;
  top: 0;
}
.t-user{
  width: 260rpx;
height: 236rpx;
gap: 32rpx;
position: relative;
top: 180rpx;

}
.user-1{
  width: 160rpx;
height: 160rpx;
border:4rpx solid #FF6815;
border-radius: 50%;

}
.user-2{
  font-family: PingFang SC;
font-size: 32rpx;
font-weight: 400;
text-align: center;
color:#4E5969;
}
.scroll-box{
  width:100%;
  height: calc(100vh - 600rpx);
}

.form-box{
width: calc(100% - 64rpx);
box-sizing: border-box;
/* height: 920rpx; */
padding: 24rpx;
gap: 24rpx;
border-radius: 18rpx;
background-color: rgba(255, 255, 255, 1);
margin: 0 auto;
/* box-shadow: 0px 4px 6px 0px #32595C1A; */
box-shadow: 0px 0px 1px 0px rgba(30, 58, 61, 0.16), 0px 4px 6px 0px rgba(50, 89, 92, 0.10);
/* box-shadow: 0px 8rpx 12rpx 0px rgba(50, 89, 92, 1); */
}
.form-label{
font-family: PingFang SC;
font-size: 32rpx;
font-weight: 600;
line-height: 44rpx;
text-align: left;
width: 100%;
height: 44rpx;
color:rgba(78, 89, 105, 1);

}
.form-li{
  width: 100%;
  box-sizing: border-box;
height: 88rpx;
/* padding: 24rpx; */
border-radius: 16rpx;
border:2rpx solid rgba(203, 212, 214, 1);
margin-bottom: 48rpx;
position: relative;

}
.err-li{
  border-color:rgba(255, 68, 71, 1);
}





.van-hairline--bottom:after{
  border-bottom-width:0 !important;
}
.van-cell:after{
  border-bottom-width: 0 !important;
}